<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="500.0" stylesheets="@../MyTheme.css" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.view.whAttendantDialogs.PickingOrderDialogController">
   <children>
      <VBox prefHeight="58.0" prefWidth="500.0" spacing="5.0">
         <children>
            <Label text="Kompletacja zamówienia">
               <font>
                  <Font size="27.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
      <ScrollPane layoutY="72.0" pickOnBounds="false">
         <content>
            <VBox fx:id="productsPane" alignment="CENTER" pickOnBounds="false" prefHeight="439.0" prefWidth="500.0" spacing="25.0" />
         </content>
      </ScrollPane>
      <HBox alignment="CENTER" layoutY="511.0" prefHeight="89.0" prefWidth="500.0" spacing="35.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handlePickProductClick" prefHeight="41.0" prefWidth="157.0" styleClass="actionButtons" text="Kompletuj produkt" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleReturnClick" prefHeight="41.0" prefWidth="158.0" styleClass="actionButtonsRed" text="Wróć" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
